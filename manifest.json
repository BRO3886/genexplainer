{
    "manifest_version": 3,
    "name": "GenExplainer",
    "version": "1.0",
    "description": "Explains selected text using Ollama",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "http://localhost:11434/*"
    ]
}